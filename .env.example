# =========================================
# MediAssist AI Environment Variables
# =========================================
# Copy this file to .env and fill in your values
# For Render deployment, set these in the Dashboard

# =========================================
# Database (PostgreSQL)
# =========================================
# Local: postgresql+asyncpg://user:password@localhost:5432/dbname
# Render: Automatically set via fromDatabase
DATABASE_URL=postgresql+asyncpg://mediassist:password@localhost:5433/mediassist

# =========================================
# MongoDB (Required for Authentication)
# =========================================
# Local: mongodb://localhost:27017
# Atlas: mongodb+srv://username:password@cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=mediassist

# =========================================
# Redis (Optional - for Celery tasks)
# =========================================
# Local: redis://localhost:6379/0
# Render: Automatically set via fromService
REDIS_URL=redis://localhost:6380/0

# =========================================
# Security
# =========================================
# Generate a secure random string for production
# openssl rand -hex 32
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256

# =========================================
# AI/ML APIs (At least one required for RAG)
# =========================================
# OpenAI API Key (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key

# Google Gemini API Key (https://aistudio.google.com/app/apikey)
GOOGLE_API_KEY=your-google-api-key

# =========================================
# ChromaDB (Optional - for Vector Search)
# =========================================
# Local: localhost
# Cloud: your-chroma-cloud-host
CHROMA_HOST=localhost
CHROMA_PORT=8005

# =========================================
# Neo4j (Optional - for Knowledge Graph)
# =========================================
# Local: bolt://localhost:7687
# Aura: neo4j+s://xxxxx.databases.neo4j.io
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# =========================================
# Object Storage (Optional - for Reports)
# =========================================
# MinIO Local: localhost:9000
# AWS S3: s3.amazonaws.com
# Cloudflare R2: your-account-id.r2.cloudflarestorage.com
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=reports

# =========================================
# ML Models
# =========================================
SYMPTOM_MODEL_PATH=./models/symptom_classifier/weights
IMAGE_MODEL_PATH=./models/image_analyzer/weights

# =========================================
# CORS (Frontend URLs)
# =========================================
# Multiple origins: comma-separated
# Local: http://localhost:3000,http://localhost:3003
# Render: https://your-frontend.onrender.com
CORS_ORIGINS=http://localhost:3000,http://localhost:3003

# =========================================
# Application Settings
# =========================================
DEBUG=true
APP_NAME=MediAssist AI

# =========================================
# Render-specific (Auto-set by Render)
# =========================================
# PORT=10000  # Set automatically by Render
